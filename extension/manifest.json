{
  "name": "Google Music Address Bar Controls",
  "description": "Control Google Music from your address bar.",
  "version": "0.0.0",
  "permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts":["background.js"],
    "persistent":false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/emoji-19.png",
      "38": "images/emoji-38.png"
    }
  },
  "content_scripts" : [{
    "matches" : ["*://play.google.com/music*"],
    "css" : ["style.css"],
    "js" : ["third-party/jquery-1.12.0.min.js", "content_script.js"]
  }],
  "web_accessible_resources": [],
  "manifest_version": 2
}